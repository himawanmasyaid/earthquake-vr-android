    */ -----------------------

    <style name="btnPrimary" parent="android:Widget.Button">
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
